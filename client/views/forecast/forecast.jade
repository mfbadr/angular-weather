h2 {{title}}
.row
  .col-xs-3
    .form-group
      form(role='form', novalidate, name='zipForm')
        label(for='zip') ZIP
        input#zip.form-control(type='text', ng-pattern='/^[0-9]{5}$/', required, autofocus, name='zip', ng-model='zip', style="background-color: {{zipForm.$valid ? 'DarkSeaGreen' : 'IndianRed'}}")
      button.btn.btn-success(ng-show='zipForm.$valid', type='submit', ng-click='getForecast(zip)') Submit
  .col-xs-6
  .col-xs-3
.row(ng-show='forecast')
  h2 Forecast
  .panel.panel-default
    .panel-body
      table.table.table-striped.table-hover
        thead
          th Time Period
          th Forecast
          th Icon
        tbody
          tr(ng-repeat='f in forecast')
            td {{f.title}}
            td {{f.fcttext}}
            td: img(ng-src='{{f.icon_url}}')
